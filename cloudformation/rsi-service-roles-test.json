{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates service roles for an account",
  "Parameters": {

  },
  "Mappings": {
    "RegionMap":{
      "us-east-1": { "name": "ec2-test-role" }
    }
  },
  "Resources": {
    "EC2Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": { "Fn::Sub": [ "${Name}-${AWS::AccountId}", {"Name": { "Fn::FindInMap": ["RegionMap", {"Ref":"AWS::Region"},"name"] } } ] },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [ {
            "Effect": "Allow",
            "Principal": { "Service": "ec2.amazonaws.com" },
            "Action": "sts:AssumeRole"
          } ]
        },
        "Policies": [
          {
            "PolicyName": "Administrator",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Id": "Admin",
              "Statement": [
                {
                  "Sid": "AdministratorAccess",
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "EC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "InstanceProfileName": "ec2-role-test",
        "Path": "/",
        "Roles": [ { "Ref": "EC2Role" } ]
      }
    }
  },
  "Outputs":{
    "EC2RoleName": {
      "Description": "EC2 Role ARN",
      "Value": {"Fn::GetAtt": ["EC2Role", "Arn"] }
    }
  }
}
