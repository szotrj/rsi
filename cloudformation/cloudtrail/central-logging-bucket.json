                },
                "Action": [
                  "kms:Create*",
                  "kms:Describe*",
                  "kms:Enable*",
                  "kms:List*",
                  "kms:Put*",
                  "kms:Update*",
                  "kms:Revoke*",
                  "kms:Disable*",
                  "kms:Get*",
                  "kms:Delete*",
                  "kms:ScheduleKeyDeletion",
                  "kms:CancelKeyDeletion"
                ],
                "Resource": "*"
              },
              {
                "Sid": "Allow use of the key",
                "Effect": "Allow",
                "Principal": { 
                  "AWS": [
                    { "Fn::Sub": "arn:${AWS::Partition}:iam::${AWS::AccountId}:user/Administrator" },
                    { "Fn::Sub": "arn:${AWS::Partition}:iam::${AWS::AccountId}:role/ADMINISTRATOR" }
                  ],
                  "Service": "cloudtrail.amazonaws.com"
                },
                "Action": [
                  "kms:Encrypt",
                  "kms:Decrypt",
                  "kms:ReEncrypt*",
                  "kms:GenerateDataKey*",
                  "kms:DescribeKey"
                ], 
                "Resource": "*"
              }    
            ]
          }
        }
      },
      "rS3KeyAlias": {
        "Type": "AWS::KMS::Alias",
        "Properties": {
          "AliasName": "alias/S3MasterKey",
          "TargetKeyId": { "Ref":"rS3BucketKey" }
        }
      }
  },
  "Outputs": {
  }
}
